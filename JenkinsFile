pipeline{
    agent any
    stages{
        stage("sonar quality check"){
            agent {
                docker {
                    image "openjdk:11"
                    image "maven:3.3.9"
                }
            }
            steps{
                script{
                    withSonarQubeEnv(credentialsId: 'sonar-password') {
                        sh 'chmod +x mvn'
                        sh 'mvn sonarqube'
                    }
                }
            }
        }
    }
}
